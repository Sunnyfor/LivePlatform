<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_live_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/ic_svg_default_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            style="@style/style_font_black"
            android:text="直播间名" />

        <EditText
            android:id="@+id/et_live_name"
            style="@style/style_common_edit"
            android:layout_marginStart="@dimen/dp_5"
            android:hint="请输入名称" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical">

        <TextView
            style="@style/style_font_black"
            android:text="直播分类" />

        <TextView
            android:id="@+id/tv_live_sort"
            style="@style/style_font_gray"
            android:layout_marginStart="@dimen/dp_15"
            android:hint="请选择" />

    </LinearLayout>

    <LinearLayout
        style="@style/style_create_project_layout"
        android:layout_height="@dimen/dp_140"
        android:orientation="vertical">

        <TextView
            style="@style/style_font_black"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:text="直播公告" />

        <EditText
            android:id="@+id/et_live_notice"
            style="@style/style_common_edit"
            android:background="@drawable/sel_border"
            android:gravity="top"
            android:hint="请输入"
            android:padding="@dimen/dp_10" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_create"
        style="@style/style_common_btn"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="0dp"
        android:text="创建" />

</LinearLayout>