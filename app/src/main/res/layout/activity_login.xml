<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@mipmap/icon_input_username" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入账号"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/ll_username"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@mipmap/icon_input_password" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_password"
        android:layout_alignLeft="@id/ll_password"
        android:layout_marginTop="@dimen/dp_10">

        <CheckBox
            android:id="@+id/cb_show_password"
            style="@style/style_font_black"
            android:text="显示密码" />

        <CheckBox
            android:id="@+id/cb_remember_pwd"
            style="@style/style_font_black"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="记住密码" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_below="@id/ll_choice"
        style="@style/style_common_btn"
        android:layout_marginTop="@dimen/dp_20"
        android:text="登录平台" />

    <LinearLayout
        android:id="@+id/ll_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_forget_pwd"
            style="@style/style_font_black"
            android:text="忘记密码"
            android:textColor="@color/color_theme" />

        <View
            style="@style/style_line_vertical"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/color_theme" />

        <TextView
            android:id="@+id/tv_register"
            style="@style/style_font_black"
            android:text="注册账号"
            android:textColor="@color/color_theme" />

    </LinearLayout>

</RelativeLayout>